header.header
	nav.nav.nav--tours
		a.nav__el(href='/') All tours 
	.header__logo
		img(src='/img/logo.png-removebg-preview.png' alt='Tripclicks logo')
	nav.nav.nav--user
		if user
			a.nav__el.nav__el--logout(href="/logout") LOG OUT
			a.nav__el(href='/me')
				img.nav__user-img(src=`/img/users/${user.photo ? user.photo : 'default.jpg'}` alt=`photo of ${user.name}`)
				span=user.name.split(' ')[0]
		else
			a.nav__el(href='/login') LOG IN
			a.nav__el.nav__el--cta(href='/signup') SIGN UP